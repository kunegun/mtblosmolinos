////////////////////////////// FORMULARIO //////////////////////////////////////
.wpcf7-form
	width 90%
	margin 0 auto
	+for_breakpoint(tablet desktop)
		width 40%
	input,
	textarea
		border 1px solid #c0c0c0
		border none
		border-radius 5px
		box-shadow inset 0 0 10px #e1e1e1
		height 30px
		width 100%
	textarea
		height 300px
	.wpcf7-submit
		background color-primario
		box-shadow none
		text-align center
		padding 5px 20px
		color white
		font-weight bold
		border none
		text-transform uppercase
		width auto



//////////////////////// PAGINACION ///////////////////////////////////
.paginacion
	list-style none
	margin: 0
	padding: 0
	float right
	li
		float left
		padding 0 10px
		a
			font-weight bold
			color color-primario




